{
  "name": "ckan-mcp-server (fork)",
  "image": "mcr.microsoft.com/devcontainers/javascript-node:20",

  "postCreateCommand": "npm install && chmod +x .devcontainer/start-mcp.sh",

  "remoteEnv": {
    "TRANSPORT": "http",
    "PORT": "3000"
  },

  "forwardPorts": [3000],
  "portsAttributes": {
    "3000": {
      "label": "CKAN MCP Server",
      "visibility": "public"
    }
  },

  "postStartCommand": "bash .devcontainer/start-mcp.sh"
}
