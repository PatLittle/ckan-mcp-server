{
  "name": "ckan-mcp-server (fork)",
  "image": "mcr.microsoft.com/devcontainers/javascript-node:20",

  "features": {
    "ghcr.io/devcontainers/features/github-cli:1": {}
  },

  "postCreateCommand": "npm run build && npm start && chmod +x .devcontainer/start-mcp.sh",

  "remoteEnv": {
    "TRANSPORT": "http",
    "PORT": "3000"
  },

  "forwardPorts": [3000],
  "portsAttributes": {
    "3000": {
      "label": "CKAN MCP Server",
      "visibility": "public"
    }
  },

  "postStartCommand": "bash .devcontainer/start-mcp.sh"
}
